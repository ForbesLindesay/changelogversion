{
  "name": "@changelogversion/server",
  "private": true,
  "version": "0.0.0",
  "description": "Add changelogs to PRs and use them to determine the version of npm packages",
  "author": "Forbes Lindesay <forbes@lindesay.co.uk> (https://www.forbeslindesay.co.uk)",
  "repository": "https://github.com/ForbesLindesay/changelogversion.git",
  "homepage": "https://github.com/ForbesLindesay/changelogversion",
  "bugs": "https://github.com/ForbesLindesay/changelogversion/issues",
  "scripts": {
    "build": "concurrently -n server,ui \"yarn build:server\" \"yarn build:ui\"",
    "build:ui": "NODE_ENV=production TS_NODE_PROJECT='tsconfig.webpack.json' webpack",
    "build:server": "tsc",
    "postbuild": "rimraf lib/**/__tests__",
    "dev": "concurrently -n server,ui \"yarn dev:server\" \"sleep 2 && yarn dev:ui\"",
    "dev:ui": "TS_NODE_PROJECT='tsconfig.webpack.json' webpack-dev-server -d --open",
    "dev:server": "yarn build:server && concurrently -n build,run \"yarn build:server --watch --preserveWatchOutput\" \"nodemon\"",
    "start": "probot run ./index.js"
  },
  "dependencies": {
    "@authentication/cookie": "^0.1.2",
    "@authentication/github": "^0.2.0",
    "body-parser": "^1.19.0",
    "@changelogversion/utils": "0.0.0",
    "probot": "^9.0.1"
  },
  "devDependencies": {
    "@forbeslindesay/tsconfig": "^2.0.0",
    "@types/body-parser": "^1.17.1",
    "@types/compression-webpack-plugin": "^2.0.1",
    "@types/express": "^4.17.2",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-syntax-highlighter": "^11.0.3",
    "@types/webpack-dev-server": "^3.9.0",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.1",
    "concurrently": "^5.0.0",
    "css-loader": "^3.4.0",
    "cssnano": "^4.1.10",
    "dotenv-extended": "^2.7.0",
    "file-loader": "^5.0.2",
    "glob-all": "^3.1.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^1.17.2",
    "postcss-loader": "^3.0.0",
    "purgecss-webpack-plugin": "^1.6.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.1.2",
    "react-svg-loader": "^3.0.3",
    "react-syntax-highlighter": "^12.2.1",
    "rimraf": "^3.0.0",
    "smee-client": "^1.0.2",
    "style-loader": "^1.1.2",
    "svgo-unique-id": "^1.0.0",
    "tailwindcss": "^1.1.4",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.3",
    "typescript": "^3.7.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.test.ts?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint -t verbose -p .",
      "git add"
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
