{
  "name": "@rollingversions/monorepo",
  "private": true,
  "@rollingversions/ignore": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "db": "yarn workspace @rollingversions/db",
    "github": "yarn workspace @rollingversions/github",
    "server": "yarn workspace @rollingversions/server",
    "cli": "yarn workspace rollingversions",
    "database:introspect": "pg-test run pg-schema && node scripts/db-post-introspect",
    "build": "yarn wsrun -m -e --stages build",
    "typecheck": "yarn cli build && yarn server typecheck",
    "dev": "yarn build && concurrently -n build,run \"yarn wsrun -e --exclude @rollingversions/server build --watch --preserveWatchOutput\" \"yarn server dev\"",
    "start": "yarn server start",
    "prestorybook": "yarn cli build",
    "storybook": "yarn server storybook",
    "lint": "tslint './packages/*/src/**/*.{ts,tsx}' -t verbose -p .",
    "prettier:write": "prettier --ignore-path .gitignore --write './**/*.{md,json,yaml,js,jsx,ts,tsx,graphql}'",
    "prettier:check": "prettier --ignore-path .gitignore --list-different './**/*.{md,json,yaml,js,jsx,ts,tsx,graphql}'",
    "test": "jest",
    "ci:test": "jest --silent --maxWorkers=2"
  },
  "devDependencies": {
    "@databases/pg": "^3.1.0",
    "@databases/pg-schema-cli": "^4.0.0",
    "@databases/pg-test": "^3.0.0",
    "@forbeslindesay/tsconfig": "^2.0.0",
    "@types/jest": "^24.0.21",
    "concurrently": "^5.0.0",
    "husky": "^3.0.9",
    "interrogator": "^1.1.0",
    "jest": "^24.9.0",
    "jskube": "^1.1.2",
    "lint-staged": "^9.4.2",
    "prettier": "^2.2.0",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2",
    "wsrun": "^5.0.0"
  },
  "pg": {
    "test": {
      "migrationsScript": [
        "node",
        "scripts/db-migrate"
      ]
    },
    "types": {
      "directory": "packages/db/src/__generated__",
      "tableTypeName": "Db{{ TABLE_NAME | singular | pascal-case }}",
      "columnTypeOverrides": {
        "change_log_entry_kinds.id": "import('rollingversions/lib/types/PullRequestState').ChangeType",
        "git_commit_pull_requests.pull_request_id": "import('./pull_requests').default['id']",
        "package_dependency_records_kinds.id": "'required' | 'optional' | 'development'"
      }
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/packages/cli/src/services/__mock_services__/index.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/packages/*/src/**/__tests__/**/*.test.ts?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/*/src/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint -t verbose -p .",
      "git add"
    ],
    "packages/*/webpack.config.ts": [
      "prettier --write",
      "git add"
    ],
    "*.{md,json,yaml,js,jsx}": [
      "prettier --write",
      "git add"
    ]
  }
}
